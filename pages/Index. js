import React, { useState } from 'react';

export default function ArtMarketplace() {
  const [artworks] = useState([
    {
      id: 1,
      title: "Abstract Sunset",
      price: 15.99,
      image: "https://images.unsplash.com/photo-1541961017774-22349e4a1262?w=400&h=400&fit=crop",
      category: "Abstract"
    },
    {
      id: 2,
      title: "Urban Landscape", 
      price: 18.99,
      image: "https://images.unsplash.com/photo-1578662996442-48f60103fc96?w=400&h=400&fit=crop",
      category: "Landscape"
    }
  ]);

  const [cart, setCart] = useState([]);

  const addToCart = (artwork) => {
    setCart([...cart, artwork]);
  };

  return (
    <div style={{minHeight: '100vh', backgroundColor: '#f9fafb'}}>
      <header style={{backgroundColor: 'white', borderBottom: '1px solid #e5e7eb', padding: '16px'}}>
        <div style={{maxWidth: '1280px', margin: '0 auto', display: 'flex', justifyContent: 'space-between', alignItems: 'center'}}>
          <h1 style={{fontSize: '24px', fontWeight: 'bold', color: '#111827'}}>Pamela's Art Gallery</h1>
          <div style={{position: 'relative'}}>
            ðŸ›’
            {cart.length > 0 && (
              <span style={{
                position: 'absolute', 
                top: '-8px', 
                right: '-8px', 
                backgroundColor: '#ef4444', 
                color: 'white', 
                fontSize: '12px', 
                borderRadius: '50%', 
                width: '20px', 
                height: '20px', 
                display: 'flex', 
                alignItems: 'center', 
                justifyContent: 'center'
              }}>
                {cart.length}
              </span>
            )}
          </div>
        </div>
      </header>

      <main style={{maxWidth: '1280px', margin: '0 auto', padding: '32px 16px'}}>
        <h2 style={{fontSize: '32px', fontWeight: 'bold', color: '#111827', marginBottom: '32px'}}>Featured Artworks</h2>
        <div style={{display: 'grid', gridTemplateColumns: 'repeat(auto-fit, minmax(300px, 1fr))', gap: '32px'}}>
          {artworks.map(artwork => (
            <div key={artwork.id} style={{backgroundColor: 'white', borderRadius: '8px', boxShadow: '0 4px 6px rgba(0, 0, 0, 0.1)', overflow: 'hidden'}}>
              <img src={artwork.image} alt={artwork.title} style={{width: '100%', height: '256px', objectFit: 'cover'}} />
              <div style={{padding: '24px'}}>
                <h3 style={{fontSize: '20px', fontWeight: '600', color: '#111827', marginBottom: '8px'}}>{artwork.title}</h3>
                <p style={{color: '#6b7280', marginBottom: '16px'}}>{artwork.category}</p>
                <div style={{display: 'flex', justifyContent: 'space-between', alignItems: 'center'}}>
                  <span style={{fontSize: '24px', fontWeight: 'bold', color: '#2563eb'}}>${artwork.price}</span>
                  <button 
                    onClick={() => addToCart(artwork)}
                    style={{
                      backgroundColor: '#2563eb', 
                      color: 'white', 
                      padding: '8px 24px', 
                      borderRadius: '8px', 
                      border: 'none',
                      cursor: 'pointer',
                      fontSize: '16px'
                    }}
                  >
                    Add to Cart
                  </button>
                </div>
              </div>
            </div>
          ))}
        </div>

        {cart.length > 0 && (
          <div style={{marginTop: '48px', backgroundColor: 'white', padding: '24px', borderRadius: '8px', boxShadow: '0 4px 6px rgba(0, 0, 0, 0.1)'}}>
            <h3 style={{fontSize: '24px', fontWeight: 'bold', marginBottom: '16px'}}>Shopping Cart ({cart.length} items)</h3>
            {cart.map((item, index) => (
              <div key={index} style={{display: 'flex', justifyContent: 'space-between', alignItems: 'center', padding: '8px 0', borderBottom: '1px solid #e5e7eb'}}>
                <span>{item.title}</span>
                <span style={{fontWeight: 'bold'}}>${item.price}</span>
              </div>
            ))}
            <div style={{marginTop: '16px', textAlign: 'right'}}>
              <strong>Total: ${cart.reduce((sum, item) => sum + item.price, 0).toFixed(2)}</strong>
            </div>
          </div>
        )}
      </main>
    </div>
  );
}
